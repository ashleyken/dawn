:root {
	--font-body-family: "din-2014",sans-serif, {{ settings.type_body_font.fallback_families }};
	--font-body-weight: {{ 300 }};
	
	--font-heading-family: "din-2014",sans-serif, {{ settings.type_header_font.fallback_families }};
	--font-heading-weight: {{ 700 }};
}

.relative {
	position: relative;
}




/*
remove padding from the logo on both versions
*/
.header__heading-link {	
	padding: 0;
}

/*
colour the search / basket icons
*/
.header__icon {
	color: rgb(var(--color-base-accent-1));
}


/*
colour the top menu text links
*/
.header__menu-item {
	color: rgba(var(--color-base-accent-1));
	font-weight: var(--font-heading-weight);
	text-transform: uppercase;
	font-size: 1.8rem;
}
.header__menu-item:hover {
	color: rgb(var(--color-base-accent-1));
}

/*
thicken and colour border bottom
*/
.header-wrapper--border-bottom {
	border-bottom: 0.2rem solid rgba(var(--color-base-accent-1));
}




/*
add ribbon
*/
@media screen and (min-width: 990px) {
	.header {
		padding-top: 0;
		padding-bottom: 0;
	}
	.header__heading-logo {
		width: 69px;
		height: 45px;
	}
	.header__heading-logo {
		opacity: 0;
	}
	.logo_ribbon_overlay {
		position: absolute;
		left: 0;
		top: 0;
		width: 100%;
		transition: top ease 300ms;
	}
	.shopify-section-header-hidden .logo_ribbon_overlay {
		top: -230px;
	}
}



.footer-block__heading {
	display: none;	
}
.footer-block__details-content {
	text-transform: uppercase;	
	font-weight: var(--font-heading-weight);
}
@media screen and (min-width: 750px) {
	.footer-block__details-content > p, .footer-block__details-content > li {
		margin: 0;
		line-height: 1.4;
		color: #fff;
	}
}
